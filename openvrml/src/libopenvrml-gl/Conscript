# Conscript -- construction file for libopenvrml-gl 
#

Import qw(BLIB toolset options);

my $ruleset  = $toolset->env();

die if( !defined( $ruleset ) );

our $BUILD      = $toolset->option( 'build' );
our $INCLUDE    = [ "%STLPORT_INCLUDE", 
		    "%BOOST_INCLUDE",
		    "$BLIB/include" ];
our $DEFINE = [ "%STLPORT_DEFINE", "%BOOST_DEFINE" ];

Link $BUILD => 'openvrml';

our $buildenv   = new cons( %{$ruleset},
			   'CPPPATH' => $INCLUDE );

my $TARGET = "$BUILD/%{PREFLIB}openvrml-gl%{SUFLIB}";

KeepPrecious $buildenv $TARGET;
Library $buildenv $TARGET, map( "$BUILD/$_", qw( gl/viewer.cpp ) );

Install $buildenv "$BLIB/include/openvrml/gl", 
  map( "openvrml/gl/$_", qw( viewer.h ) );

Install $buildenv "$BLIB/lib", $TARGET;

#
# Conscript -- end of file
#

