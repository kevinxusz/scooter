use Data::Dumper;
use Cons::Template;
use Cons::Common;

Import qw(BLIB toolset options);

my $ruleset  = $toolset->env();

die if( !defined( $ruleset ) );

our $BUILD      = $toolset->option( 'build' );
our $INCLUDE    = [ "$BLIB/include" ];

Link $BUILD => 'src';

our $buildenv   = new cons( %{$ruleset},
			    'CPPPATH' => $INCLUDE );

my $TARGET = "$BUILD/%{PREFLIB}png%{SUFLIB}";

KeepPrecious $buildenv $TARGET;

Library $buildenv $TARGET, 
  map( "$BUILD/$_", 
       qw( png.c
	   pngerror.c
	   pnggccrd.c
	   pngget.c
	   pngmem.c
	   pngpread.c
	   pngread.c
	   pngrio.c
	   pngrtran.c
	   pngrutil.c
	   pngset.c
	   pngtrans.c
	   pngvcrd.c
	   pngwio.c
	   pngwrite.c
	   pngwtran.c
	   pngwutil.c ) );

Install $buildenv "$BLIB/include", 
  map( "$BUILD/$_", qw( png.h pngconf.h ) );

Install $buildenv "$BLIB/lib", $TARGET;

#
# Conscript -- end of file
#

