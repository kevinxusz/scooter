Import qw(BLIB toolset options platform defines);

my $ruleset  = $toolset->env();

die if( !defined( $ruleset ) );

our $BUILD      = $toolset->option( 'build' );
our $INCLUDE    = [ "%STLPORT_INCLUDE",
		    "%ZLIB_INCLUDE",
		    "%JPEG_INCLUDE",
		    "%LIBPNG_INCLUDE",
		    "$BLIB/include",
		    "../regex",
		    "." ];

for my $define (keys( %$defines )) {
    $ruleset->{'CXXFLAGS'} .= " -D$define";
    $ruleset->{'CXXFLAGS'} .= "=" . $defines->{$define} 
      if( defined( $defines->{$define} ) );
}

Link $BUILD => '.';

our $buildenv   = new cons( %{$ruleset},
			   'CPPPATH' => $INCLUDE );

my $TARGET = "$BUILD/%{PREFLIB}wxgeneric%{SUFLIB}";

KeepPrecious $buildenv $TARGET;

Library $buildenv $TARGET, 
  map( "$BUILD/$_", 
       qw( 
busyinfo.cpp
calctrl.cpp
choicdgg.cpp
dcbuffer.cpp
dcpsg.cpp
dirctrlg.cpp
dragimgg.cpp
grid.cpp
gridctrl.cpp
gridsel.cpp
laywin.cpp
logg.cpp
numdlgg.cpp
panelg.cpp
progdlgg.cpp
prop.cpp
propform.cpp
proplist.cpp
sashwin.cpp
scrlwing.cpp
spinctlg.cpp
splash.cpp
splitter.cpp
statusbr.cpp
tbarsmpl.cpp
textdlgg.cpp
tipdlg.cpp
tipwin.cpp
treectlg.cpp
treelay.cpp
wizard.cpp
 ) );

Install $buildenv "$BLIB/lib", $TARGET;

#
# Conscript -- end of file
#

