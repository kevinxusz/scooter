<cloxx>
    <config>
	<autohelp/>
    </config>

    <options>
	<option id="config_path" type="string" strict="yes"
                mandatory="no"
	        default=".">
	    <name>config-path</name>
	    <comment>Configuration file path</comment>
	</option>
	<option id="config_help" type="flag" strict="yes"
                mandatory="no"
	        default="false">
	    <name>config-help</name>
	    <comment>Print help message on config command line 
	             options and exit
	    </comment>
	</option>
    </options>
</cloxx>
