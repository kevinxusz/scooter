use Cons::VersionControl;

Import qw(BLIB toolset options);

my $ruleset  = $toolset->env();
die if( !defined( $ruleset ) );

$ruleset->{'LDFLAGS'} .= " -subsystem:windows";

our $BUILD      = $toolset->option( 'build' );
our $INCLUDE    = [ "%STLPORT_INCLUDE", 
		    "%BOOST_INCLUDE",
		    "$BLIB/include",
		    "." ];

our $DEFINE     = [ "%STLPORT_DEFINE", "%BOOST_DEFINE", "-D_TRACE" ];
our $LIBPATH    = [ "$BLIB/lib", "%STLPORT_LIB", "%BOOST_LIB", 
		    "%ZLIB_LIB", "%JPEG_LIB", "%LIBPNG_LIB" ];
our $LIBS       = join( ' ' , qw( -ldgd
				  -lwxcommon
				  -lwxgeneric 
				  -lwxregex
				  -lwxhtml
				  -lwxmsw
				  -lantlr 
				  -lopenvrml 
				  -lopenvrml-gl
				  -lzlib 
				  -llibjpeg 
				  -llibpng
				  -lkernel32 
				  -luser32
				  -lgdi32
				  -lcomdlg32
				  -lwinspool
				  -lwinmm
				  -lshell32
				  -loldnames
				  -lcomctl32
				  -lodbc32
				  -lole32
				  -loleaut32
				  -luuid
				  -lrpcrt4
				  -ladvapi32
				  -lwsock32 
				  -lopengl32
				  -lglu32 ) );

our $version    = Cons::VersionControl->open(); 

map { $ruleset->{'CXXFLAGS'} .= " $_" } @$DEFINE;

Link $BUILD => 'src';


our $buildenv   = new cons( %{$ruleset},
			   'CPPPATH' => $INCLUDE,
			   'LIBPATH' => $LIBPATH,
			   'LIBS'    => $LIBS );

my $TARGET = "$BUILD/cr%{SUFEXE}";

Command $buildenv "$BUILD/chromiumres%SUFOBJ", "src/chromium.rc",
  qq(%RC -r -Iblib/include -fo%> %<);

KeepPrecious $buildenv $TARGET;
AfterBuild $buildenv $TARGET, q( 
  if( $status eq 'built' ) {
     $version->save();
     print "AfterBuild: version incremented to " . $version->string() . "...\n"
  }
);
Program $buildenv $TARGET, 
  map( "$BUILD/$_", qw( crApp.cpp 
			crEvent.cpp
			crMainWindow.cpp 
			crVRMLControl.cpp
			crVRMLEditCtrl.cpp
			crVRMLCanvas.cpp
			crVRMLViewer.cpp
			crVRMLEditor.cpp			
			crVRMLLoader.cpp
			crVRMLDocument.cpp
			crVRMLDocView.cpp
			crDebugConsole.cpp
			crStreamToText.cpp
			crMainStatusBar.cpp
			crMainControlPanel.cpp
			crMesh.cpp
			crMeshControl.cpp
			crVRMLTree.cpp
			crToggleGroup.cpp
			chromiumres%SUFOBJ ) );

Install $buildenv "$BLIB/bin", $TARGET;



#
# Conscript -- end of file
#

